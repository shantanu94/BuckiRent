<h1>Add New Listing</h1>

<%= form_for @listing, url: {action: "create"},
                       html: {:multipart => true} do |f| %>
                       
  <p>
    <label>Heading: </label>
    <%= f.text_field :heading %>
  </p>

  <p>
    <label>Description: </label>
    <%= f.text_area :description %>
  </p>

  <p>
    <label>Address: </label>
    <%= f.text_field :address %>
  </p>

  <p>
    <label>Area</label>
    <%= f.text_field :area %>
  </p>

  <p>
    <label>Bed</label>
    <%= f.text_field :bed %>
  </p>

  <p>
    <label>Bath</label>
    <%= f.text_field :bath %>
  </p>

  <p>
    <label>Rent</label>
    <%= f.text_field :rent %>
  </p>

  <p>
    <%= f.file_field :photo %>
  </p>

  <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', {:action => 'list'} %>
