<h1>Add New Listing</h1>

<%= form_tag :action => 'create' do %>

<p>
  <label for = "listing_address">Heading</label>:
  <%= text_field 'listing', 'heading' %>
</p>

<p>
  <label for = "listing_address">Description</label>:
  <%= text_field 'listing', 'description' %>
</p>

</p>
  <label for = "listing_address">Address</label>:
  <%= text_field 'listing', 'address' %>
</p>

<p>
  <label for = "listing_address">Area</label>:
  <%= text_field 'listing', 'area' %>
</p>

<p>
  <label for = "listing_address">Bedrooms</label>:
  <%= text_field 'listing', 'bed' %>
</p>

<p>
  <label for = "listing_address">Bath</label>:
  <%= text_field 'listing', 'bath' %>
</p>

<p>
  <label for = "listing_address">Rent</label>:
  <%= text_field 'listing', 'rent' %>
</p>

<%= submit_tag "Create" %>

<% end -%>

<%= link_to 'Back', {:action => 'list'} %>
