<h1>Add New Listing</h1>

<%= form_for @listing, url: {action: "create"},
                       html: {class: "nifty_form"} do |f| %>

  <label>Heading: </label>
  <%= f.text_field :heading %>
  <br />

  <label>Description: </label>
  <%= f.text_area :description %>
  <br />

  <label>Address: </label>
  <%= f.text_field :address %>
  <br />

  <label>Area</label>
  <%= f.text_field :area %>
  <br />

  <label>Bed</label>
  <%= f.text_field :bed %>
  <br />

  <label>Bath</label>
  <%= f.text_field :bath %>
  <br />

  <label>Rent</label>
  <%= f.text_field :rent %>
  <br />

  <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', {:action => 'list'} %>
